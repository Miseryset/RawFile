<?xml version="1.0" encoding="UTF-8" ?>
<font_module_build>

  <!--假设我们的脚本放在assets下一个叫scripts的文件夹-->
  <resource file="file:///android_asset/scripts/download_from_github.sh" />

  <action>
    <title>简单模块制作2</title>
    <param
      name="font_module"
      label="模块模板地址"
      required="true"
      type="text"
      value="https://api.github.com/repos/lxgw/simple-cjk-font-magisk-module-template/releases" />
    <param
      name="font_module_name"
      label="模板模块名称"
      required="true"
      type="text"
      value="0000.zip" />
    <param
      name="save_folder"
      label="保存位置"
      required="true"
      type="folder"
      editable="true"
      value="/sdcard/Download" />
    <param
      name="isflash"
      label="直接刷入？"
      type="switch"
      value="0" />
    <param
      name="isdelete_of"
      label="删除字体原文件？"
      type="switch"
      value="0" />
    <param
      name="font_id"
      label="字体id"
      desc="仅限英文 数字 下划线"
      type="text"
      value="font_id" />
    <param
      name="font_name"
      label="字体名称"
      type="text"
      value="font_by_MiserysetTool" />
    <param
      name="fontw_thin"
      label="字重：淡体"
      desc="100 - 淡体 Thin /Hairline"
      type="file"
      value="" />
    <param
      name="fontw_extralight"
      label="字重：特细"
      desc="200 - 特细 Extra-Light / Ultra-Light"
      type="file"
      value="" />
    <param
      name="fontw_light"
      label="字重：细体"
      desc="300 - 细体 Light"
      type="file"
      value="" />
    <param
      name="fontw_regular"
      required="true"
      label="字重：标准"
      desc="400 - 标准 Regular / Normal / Book / Plain(必选项)"
      type="file"
      value="" />
    <param
      name="fontw_medium"
      label="字重：适中"
      desc="500 - 适中 Medium"
      type="file"
      value="" />
    <param
      name="fontw_demibold"
      label="字重：次粗"
      desc="600 - 次粗 Demi-Bold / Semi-Bold"
      type="file"
      value="" />
    <param
      name="fontw_bold"
      label="字重：粗体"
      desc="700 - 粗体 Bold"
      type="file"
      value="" />
    <param
      name="fontw_extrabold"
      label="字重：特粗"
      desc="800 - 特粗 Extra-bold / Extra"
      type="file"
      value="" />
    <param
      name="fontw_black"
      label="字重：浓体"
      desc="900 - 浓体 Black / Heavy"
      type="file"
      value="" />
    
    <set>
      wget -O ${START_DIR}/scripts/font_module_build2.sh https://raw.githubusercontent.com/Miseryset/RawFile/main/sundries/font_module_build2.sh
      if [ -f ${START_DIR}/scripts/font_module_build2.sh ]; then
        sh ${START_DIR}/scripts/font_module_build2.sh
      else
        echo "脚本下载错误"
        exit 1
      fi
    </set>
  </action>
  <action>
    <title>更新Host</title>
    <param
      name="customized_hosts"
      label="自定义host"
      desc="存放于 /sdcard/Android/Anyhosts/user_rules"
      type="text"
      value-sh="[ -e ${START_DIR}/scripts/update_anyhosts.sh ] && sh ${START_DIR}/scripts/update_anyhosts.sh -p" />
    <set>
      wget -O ${START_DIR}/scripts/update_anyhosts.sh https://raw.githubusercontent.com/Miseryset/RawFile/main/sundries/update_anyhosts.sh
      if [ -f ${START_DIR}/scripts/update_anyhosts.sh ]; then
        sh ${START_DIR}/scripts/update_anyhosts.sh -s
      else
        echo "脚本下载错误"
        exit 1
      fi
    </set>
  </action>
  <action>
    <title>从git仓库下载release</title>
    <param
      name="_git_address"
      label="下载地址"
      required="true"
      type="text"
      value="https://api.github.com/repos/lxgw/simple-cjk-font-magisk-module-template/releases" />
    <param
      name="_filter_keys"
      label="过滤关键字"
      required="true"
      type="text"
      value="FontTemplateS" />
    <param
      name="_saverd_name"
      label="保存名称"
      required="true"
      type="text"
      value="0.zip" />
    <set>sh ${START_DIR}/scripts/download_from_github.sh "$_git_address" "$_filter_keys" "$_saverd_name"</set>
  </action>
  <action>
    <title>合并bilibili缓存</title>
    <param
      name="_bili_down"
      label="bili缓存位置"
      required="true"
      type="folder"
      editable="true"
      value="/sdcard/Android/data/tv.danmaku.bili/download" />
    <param
      name="_output_dir"
      label="合并输出位置"
      required="true"
      type="folder"
      editable="true"
      value="/sdcard/Movies/bilibili" />
    <set>
      wget -O ${START_DIR}/scripts/bili_merge.sh https://raw.githubusercontent.com/Miseryset/RawFile/main/sundries/bili_merge.sh
      if [ -f ${START_DIR}/scripts/bili_merge.sh ]; then
        sh ${START_DIR}/scripts/bili_merge.sh
      else
        echo "脚本下载错误"
        exit 1
      fi
    </set>
  </action>

</font_module_build>
